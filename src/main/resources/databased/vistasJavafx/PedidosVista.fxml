<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="databased.vistasJavafx.PedidosVistaController">
   <children>
      <VBox layoutX="10.0" layoutY="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label styleClass="title" text="Gestión de artículos" />
      
            <TableView fx:id="tblArticulos" prefHeight="396.0" prefWidth="770.0">
              <columns>
                <TableColumn fx:id="clCodigo" prefWidth="75.0" text="Código" />
                <TableColumn fx:id="clDescripcion" prefWidth="75.0" text="Descripción" />
                  <TableColumn fx:id="clGastosEnvio" prefWidth="75.0" text="PVP" />
                  <TableColumn fx:id="clPrecioVenta" prefWidth="75.0" text="Gastos de envio" />
                  <TableColumn fx:id="clTiempoPreparacion" prefWidth="75.0" text="Min. preparación" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button fx:id="btnNuevo" mnemonicParsing="false" onAction="#showAddPedido" text="Nuevo" />
              </buttons>
            </ButtonBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
