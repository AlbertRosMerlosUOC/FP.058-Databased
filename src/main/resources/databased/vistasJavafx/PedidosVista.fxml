<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="databased.vistasControllerJavafx.PedidosVistaController">
   <children>
       <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
           <children>
               <Label styleClass="title" text="Gestión de Pedidos">
                   <VBox.margin>
                       <Insets left="10.0" />
                   </VBox.margin>
               </Label>
      
            <TableView fx:id="tblPedidos" prefHeight="336.0" prefWidth="770.0">
              <columns>
                <TableColumn fx:id="numPedido" prefWidth="75.0" text="Núm. pedido" />
                <TableColumn fx:id="fechaPedido" prefWidth="75.0" text="Fecha pedido" />
                  <TableColumn fx:id="nif" prefWidth="75.0" text="Nif Cliente" />
                  <TableColumn fx:id="nombre" prefWidth="75.0" text="Nombre cliente" />
                  <TableColumn fx:id="codArticulo" prefWidth="75.0" text="Cód. Articulo" />
                  <TableColumn fx:id="descripcion" prefWidth="75.0" text="Descripcion" />
                  <TableColumn fx:id="precioUnidad" prefWidth="75.0" text="P. Unidad" />
                  <TableColumn fx:id="cantidad" prefWidth="75.0" text="Cantidad" />
                  <TableColumn fx:id="precioEnvio" prefWidth="75.0" text="P. Envio" />
                  <TableColumn fx:id="precioTotal" prefWidth="75.0" text="P. Total" />
                  <TableColumn fx:id="enviado" prefWidth="75.0" text="Enviado" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </TableView>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                  <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#showDelPedido" text="Eliminar" />
                  <Button fx:id="btnNuevo" mnemonicParsing="false" onAction="#showAddPedido" text="Nuevo" />
              </buttons>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </ButtonBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
