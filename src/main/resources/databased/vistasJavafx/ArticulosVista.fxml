<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="databased.vistasControllerJavafx.ArticulosVistaController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label styleClass="title" text="Gestión de Artículos">
                <VBox.margin>
                    <Insets left="10.0" />
                </VBox.margin>
            </Label>

            <TableView fx:id="tblArticulos" prefHeight="336.0" prefWidth="770.0">
              <columns>
                <TableColumn fx:id="clCodigo" prefWidth="75.0" text="Código" />
                <TableColumn fx:id="clDescripcion" prefWidth="75.0" text="Descripción" />
                  <TableColumn fx:id="clGastosEnvio" prefWidth="75.0" text="PVP" />
                  <TableColumn fx:id="clPrecioVenta" prefWidth="75.0" text="Gastos de envio" />
                  <TableColumn fx:id="clTiempoPreparacion" prefWidth="75.0" text="Min. preparación" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </TableView>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button fx:id="btnNuevo" mnemonicParsing="false" onAction="#showAddArticulo" text="Nuevo" />
              </buttons>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </ButtonBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
